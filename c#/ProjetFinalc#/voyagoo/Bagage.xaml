<Window x:Class="voyagoo.Bagage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gestion des Bagages"
		    WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

	<Grid>
		<!-- Image de fond avec overlay sombre pour meilleure lisibilite -->
		<Grid>
			<Image Source="Images/Designer.jpeg" Stretch="UniformToFill" Panel.ZIndex="-1" />
			<Rectangle Fill="#80000000" Panel.ZIndex="0" />
		</Grid>

		<!-- En-tete moderne -->
		<StackPanel Margin="20" VerticalAlignment="Top">
			<TextBlock Text="Voyagevoo"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,0,10" />
			<Border Height="2" Background="#007ACC" Width="100" HorizontalAlignment="Left" />
		</StackPanel>

		<!-- Carte principale avec effet d'ombre -->
		<Border CornerRadius="12"
                Background="#FAFAFA"
                Margin="40,0,40,0"
                Padding="0"
                VerticalAlignment="Center"
                BorderThickness="0" Height="356">

			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<!-- Titre de la carte -->
				<Border Background="#007ACC"
                        CornerRadius="12,12,0,0"
                        Padding="15" Margin="0,27,0,280" Grid.RowSpan="2">
					<TextBlock Text="Selectionnez vos bagages"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center" />
				</Border>

				<!-- Options de bagage -->
				<UniformGrid Columns="3"
                             Grid.Row="1"
                             Margin="15">

					<!-- Bagage Cabine -->
					<Border CornerRadius="8"
                             Background="White"
                             Padding="15"
                             Margin="10,42,10,-22"
                             BorderThickness="1"
                             BorderBrush="#EEEEEE">
						<StackPanel HorizontalAlignment="Center">
							<Image Source="Images/bagage_cabine.png"
                                   Width="120"
                                   Height="120"
                                   Stretch="Uniform" />
							<TextBlock FontSize="16"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       Margin="0,10,0,5">Bagage Cabine</TextBlock>
							<TextBlock FontSize="13"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Foreground="#666666">Petit format, max 10kg</TextBlock>
							<RadioButton x:Name="bagageCabine" GroupName="Bagage"
                                          Content="Selectionner"
                                          Margin="0,15,0,0" />
						</StackPanel>
					</Border>

					<!-- Bagage Soute -->
					<Border CornerRadius="8"
                             Background="White"
                             Padding="15"
                             Margin="10,38,10,-18"
                             BorderThickness="1"
                             BorderBrush="#EEEEEE">
						<StackPanel HorizontalAlignment="Center">
							<Image Source="Images/bagage_soute.png"
                                   Width="120"
                                   Height="120"
                                   Stretch="Uniform" />
							<TextBlock FontSize="16"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       Margin="0,10,0,5">Bagage Soute</TextBlock>
							<TextBlock FontSize="13"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Foreground="#666666">Jusqu'a 23kg</TextBlock>
							<RadioButton x:Name="bagageSoute" GroupName="Bagage"
                                          Content="Selectionner"
                                          Margin="0,15,0,0" />
						</StackPanel>
					</Border>

					<!-- Aucun Bagage -->
					<Border CornerRadius="8"
                             Background="White"
                             Padding="15"
                             Margin="10,38,10,-18"
                             BorderThickness="1"
                             BorderBrush="#EEEEEE">
						<StackPanel HorizontalAlignment="Center">
							<Image Source="Images/sans_bagage.png"
                                   Width="120"
                                   Height="120"
                                   Stretch="Uniform" />
							<TextBlock FontSize="16"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       Margin="0,10,0,5">Sans Bagage</TextBlock>
							<TextBlock FontSize="13"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Foreground="#666666">Voyager lÃ©ger !</TextBlock>
							<RadioButton x:Name="sansBagage" GroupName="Bagage"
                                          Content="Selectionner"
                                          Margin="0,15,0,0" />
						</StackPanel>
					</Border>
				</UniformGrid>

				<!-- Bouton en bas de la carte -->
				<Border Grid.Row="2"
                         Background="#F5F5F5"
                         CornerRadius="0,0,12,12"
                         Padding="15" Margin="0,6,0,-6">
					<Button Content="Reserver"
                            Width="150"
                            Height="40"
                            FontSize="14"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Right"
                            Background="#007ACC"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Reserver_Click" />
				</Border>
			</Grid>
		</Border>
	</Grid>

	<Window.Resources>
		<!-- Styles pour les elements modernes -->
		<Style x:Key="ModernRadioButton" TargetType="RadioButton">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="RadioButton">
						<Grid>
							<Border x:Name="border"
                                    Background="Transparent"
                                    BorderBrush="#007ACC"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="8,4">
								<ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
							</Border>
						</Grid>
						<ControlTemplate.Triggers>
							<Trigger Property="IsChecked" Value="True">
								<Setter TargetName="border" Property="Background" Value="#007ACC" />
								<Setter TargetName="border" Value="White" />
							</Trigger>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="BorderBrush" Value="#005D99" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Effet d'ombre -->
		<DropShadowEffect x:Key="ShadowEffect"
                          BlurRadius="15"
                          ShadowDepth="3"
                          Opacity="0.2"
                          Color="Black" />
	</Window.Resources>
</Window>