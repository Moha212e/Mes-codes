<Window x:Class="voyagoo.Index"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Accueil"
    WindowState="Maximized"

        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="Background" Value="#4285F4" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="FontWeight" Value="SemiBold" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Padding" Value="12 6" />
			<Setter Property="Cursor" Value="Hand" />
			<Setter Property="Effect">
				<Setter.Value>
					<DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" />
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#3367D6" />
					<Setter Property="Effect">
						<Setter.Value>
							<DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.3" />
						</Setter.Value>
					</Setter>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="TextBox">
			<Setter Property="Background" Value="#FAFAFA" />
			<Setter Property="BorderBrush" Value="#E0E0E0" />
			<Setter Property="BorderThickness" Value="0 0 0 2" />
			<Setter Property="Padding" Value="0 5" />
			<Setter Property="FontSize" Value="14" />
			<Style.Triggers>
				<Trigger Property="IsFocused" Value="True">
					<Setter Property="BorderBrush" Value="#4285F4" />
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="DatePicker">
			<Setter Property="Background" Value="#FAFAFA" />
			<Setter Property="BorderBrush" Value="#E0E0E0" />
			<Setter Property="BorderThickness" Value="0 0 0 2" />
			<Setter Property="FontSize" Value="14" />
		</Style>

		<Style TargetType="TextBlock">
			<Setter Property="Foreground" Value="#424242" />
			<Setter Property="FontSize" Value="14" />
		</Style>

		<Style TargetType="Border">
			<Setter Property="CornerRadius" Value="12" />
			<Setter Property="Background" Value="#FFFFFF" />
			<Setter Property="Effect">
				<Setter.Value>
					<DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.1" />
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Grid>
		<!-- Image de fond avec lgre opacite -->
		<Image Source="pack://application:,,,/Images/Designer.jpeg"
               Stretch="UniformToFill"
               Panel.ZIndex="-1"
               Opacity="0.95" />

		<!-- Conteneur principal -->
		<Grid Margin="30">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<!-- Section de recherche - version moderne -->
			<Border Padding="20" Margin="0,0,0,15">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<!-- Champ Lieu -->
					<StackPanel Grid.Column="0" Margin="0,0,15,0">
						<TextBlock Text="Destination" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8" />
						<TextBox x:Name="txtLieu" />
					</StackPanel>

					<!-- Champ Prix -->
					<StackPanel Grid.Column="1" Margin="15,0,15,0">
						<TextBlock Text="Budget" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8" />
						<TextBox x:Name="txtPrix" />
					</StackPanel>

					<!-- Champ Date -->
					<StackPanel Grid.Column="2" Margin="15,0,0,0">
						<TextBlock Text="Dates" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8" />
						<DatePicker x:Name="datePicker" />
					</StackPanel>

					<!-- Bouton Rechercher -->
					<Button Grid.Column="3" Content="Explorer"
                            Margin="20,20,0,0"
                            VerticalAlignment="Bottom"
                            Click="OnSearchClick"
                            Width="120"
                            FontSize="16" />
				</Grid>
			</Border>

			<!-- Section Suggestions - version moderne -->
			<Border Grid.Row="1" Padding="15">
				<DockPanel>
					<TextBlock DockPanel.Dock="Top"
                               Text="Decouvrez nos destinations"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"
                               Foreground="#212121" />

					<!-- Carousel horizontal -->
					<ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Disabled"
                                  Padding="5">
						<ListBox x:Name="tripsListBox" SelectionChanged="OnListBoxSelectionChanged">
							<ItemsControl.ItemsPanel>
								<ItemsPanelTemplate>
									<StackPanel Orientation="Horizontal" />
								</ItemsPanelTemplate>
							</ItemsControl.ItemsPanel>
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<Border Width="480" Height="460" Background="White" CornerRadius="10">
										<Grid>
											<Grid.RowDefinitions>
												<RowDefinition Height="280" />
												<RowDefinition Height="*" />
												<RowDefinition Height="Auto" />
											</Grid.RowDefinitions>

											<!-- Image -->
											<Border Grid.Row="0" CornerRadius="10,10,0,0" Margin="20">
												<Image Source="{Binding _image}"
                                                       Stretch="UniformToFill">
													<Image.Triggers>
														<EventTrigger RoutedEvent="MouseEnter">
															<BeginStoryboard>
																<Storyboard>
																	<DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.9" Duration="0:0:0.2" />
																	<DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.05" Duration="0:0:0.2" />
																	<DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.05" Duration="0:0:0.2" />
																</Storyboard>
															</BeginStoryboard>
														</EventTrigger>
														<EventTrigger RoutedEvent="MouseLeave">
															<BeginStoryboard>
																<Storyboard>
																	<DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2" />
																	<DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" Duration="0:0:0.2" />
																	<DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1" Duration="0:0:0.2" />
																</Storyboard>
															</BeginStoryboard>
														</EventTrigger>
													</Image.Triggers>
													<Image.RenderTransform>
														<ScaleTransform CenterX="0.5" CenterY="0.5" />
													</Image.RenderTransform>
												</Image>
											</Border>
											<!-- Détails -->
											<StackPanel Grid.Row="1" Margin="12">
												<TextBlock Text="{Binding _destination}"
														   FontWeight="SemiBold" FontSize="28" />
												<TextBlock Text="{Binding _date}"
														   Foreground="#757575" Margin="0,4,0,0" FontSize="20" />
												<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
													<TextBlock Text="{Binding _price}"
															   FontWeight="Bold" FontSize="26" Foreground="#4285F4" />
													<TextBlock Text="/personne" Margin="4,0,0,0" Foreground="#757575" />
												</StackPanel>
											</StackPanel>

											<!-- Bouton -->
											<Button Grid.Row="2" Content="Réserver"
													Click="OnReserveButtonClick"
													Margin="12" HorizontalAlignment="Center"
													CommandParameter="{Binding}" />
										</Grid>
									</Border>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ListBox>
					</ScrollViewer>
				</DockPanel>
			</Border>
		</Grid>
	</Grid>
</Window>