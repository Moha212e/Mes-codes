<Window
    x:Class="voyagoo.Ticket"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Billet de voyage"
    Width="800"
    Height="500"
    FontFamily="Segoe UI"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <!--  Image de fond avec overlay sombre  -->
        <Grid>
            <Image
                Panel.ZIndex="-1"
                Source="Images/Designer.jpeg"
                Stretch="UniformToFill" />
            <Rectangle
                Panel.ZIndex="0"
                Fill="#99000000"
                Opacity="0.85" />
        </Grid>

        <!--  En-tête élégant  -->
        <StackPanel Margin="20,20,20,0" VerticalAlignment="Top">
            <TextBlock
                FontFamily="Segoe UI Light"
                FontSize="24"
                Foreground="White"
                Text="VoyageVoo" />
            <TextBlock
                Margin="0,10,0,20"
                FontSize="22"
                FontWeight="Light"
                Foreground="White"
                Text="Récapitulatif de votre réservation" />
            <Border
                Width="200"
                Height="1"
                HorizontalAlignment="Left"
                Background="#40FFFFFF" />
        </StackPanel>

        <!--  Carte d'embarquement style carte de crédit  -->
        <Border
            Margin="40,100,40,150"
            Padding="0"
            Background="#20FFFFFF"
            BorderBrush="#40FFFFFF"
            BorderThickness="1"
            CornerRadius="12">

            <!--  Overlay pour la carte  -->
            <Border Background="#30000000" CornerRadius="12">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Séparateur vertical  -->
                    <Rectangle
                        Grid.Column="1"
                        Margin="0,10"
                        VerticalAlignment="Stretch"
                        Fill="#40FFFFFF" />

                    <!--  Section Passager  -->
                    <StackPanel Margin="0,0,15,0">
                        <TextBlock
                            Margin="0,0,0,15"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="INFORMATIONS PASSAGER" />
                        <StackPanel Background="#15FFFFFF">
                            <TextBlock
                                x:Name="txtMainPassenger"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="White" />
                            <TextBlock
                                x:Name="txtAccompanying"
                                Margin="0,8,0,0"
                                FontSize="13"
                                Foreground="#BBFFFFFF" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Section Vol  -->
                    <StackPanel Grid.Column="2" Margin="15,0,0,0">
                        <TextBlock
                            Margin="0,0,0,15"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="DÉTAILS DU VOL" />
                        <StackPanel Background="#15FFFFFF">
                            <TextBlock
                                x:Name="txtDestination"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="White" />
                            <TextBlock
                                x:Name="txtDuration"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="White" />
                            <TextBlock
                                x:Name="txtDescription"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="White" />

                            <TextBlock
                                x:Name="txtDepartureDate"
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BBFFFFFF" />
                            <TextBlock
                                x:Name="txtLuggage"
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BBFFFFFF" />
                            <TextBlock
                                x:Name="txtDate"
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BBFFFFFF" />
                            <TextBlock
                                x:Name="txtTotal"
                                Margin="0,5,0,0"
                                FontSize="13"
                                Foreground="#BBFFFFFF" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!--  Bouton de confirmation style moderne  -->
        <Button
            Margin="0,0,40,40"
            Padding="20,8"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="Transparent"
            BorderBrush="White"
            BorderThickness="1"
            Click="Confirmer_Click"
            Content="Confirmer la réservation"
            Cursor="Hand"
            FontSize="14"
            Foreground="White">
            <Button.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Opacity="0.3"
                    ShadowDepth="2" />
            </Button.Effect>
        </Button>
    </Grid>
</Window>